    <div id="appointments"></div>
  </div>

  <script>
    // Fake appointments (for now)
    const appointments = [
      { name: "John Doe", service: "Haircut", time: "12:00 PM" },
      { name: "Maria Smith", service: "Nails", time: "1:30 PM" }
    ];

    const container = document.getElementById("appointments");

    appointments.forEach((appt, index) => {
      const div = document.createElement("div");
      div.className = "appointment";

      div.innerHTML = `
        <strong>${appt.name}</strong>
        Service: ${appt.service}<br>
        Time: ${appt.time}
        <button class="done" onclick="markDone(${index})">Mark Done</button>
      `;

      container.appendChild(div);
    });

    function markDone(index) {
      alert("Appointment completed âœ”");
    }
  </script>

